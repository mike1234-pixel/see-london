{
  "name": "natours",
  "version": "1.0.0",
  "description": "Nature tours, Advanced CSS and Sass Project",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mike1234-pixel/Natours-Project.git"
  },
  "author": "Michael Tandy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mike1234-pixel/Natours-Project/issues"
  },
  "homepage": "https://github.com/mike1234-pixel/Natours-Project#readme",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "concat": "^1.0.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0"
  }
}
